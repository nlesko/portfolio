---
import Footer from "../containers/Footer.astro";
interface Props {
	title: string;
	description?: string;
}

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const url = canonicalUrl.href;
let { title, description } = Astro.props;

if(!description) {
	description = "Explore Nikola Le≈°ko's portfolio showcasing his expertise in full-stack web development and software engineering. Specializing in performance, scalability, and responsive design, Nikola delivers high-quality web applications using cutting-edge technologies like React, TypeScript, Node.js, and more. Learn about his latest projects and connect for collaboration.";
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="canonical" href={url} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content={description} />
	</head>
	<body>
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;700&display=swap");
	@import url("https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,700;1,400&display=swap");

	html {
		scroll-behavior: smooth;
	}

	html,
	body {
		padding: 0;
		margin: 0;
		font-family: "Roboto", sans-serif;
		font-weight: 300;
		font-size: 16px;
		overflow-x: hidden;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: "Raleway", sans-serif;
		font-weight: 400;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	* {
		box-sizing: border-box;
	}

	body {
		@apply bg-steel-blue-900;
		@apply text-white;
	}

	.list-[square] li {
		position: relative;
	}
</style>

<script>
	import AOS from	"aos";
	import 'aos/dist/aos.css'; // You can also use <link> for styles
	// ..
	AOS.init();
</script>